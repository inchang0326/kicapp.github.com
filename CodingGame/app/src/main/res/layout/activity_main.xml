<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="55dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#c1cdcd"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:background="#c1cdcd"
                android:orientation="vertical"
                android:padding="2.5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#c1cdcd"
                    android:padding="10dp"
                    android:gravity="center">

                    <GridView
                        android:id="@+id/codingStation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#FFFFFF"
                        android:numColumns="4">

                    </GridView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1.2"
                    android:background="#c1cdcd"
                    android:orientation="vertical">

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#c1cdcd"
                        android:columnCount="4"
                        android:paddingLeft="15dp">

                        <ImageView
                            android:id="@+id/up"
                            android:layout_width="97dp"
                            android:layout_height="97dp"
                            android:background="@drawable/codinggame_up"
                            android:contentDescription="up"
                            android:layout_margin="1dp"/>

                        <ImageView
                            android:id="@+id/down"
                            android:layout_width="97dp"
                            android:layout_height="97dp"
                            android:background="@drawable/codinggame_down"
                            android:contentDescription="down"
                            android:layout_margin="1dp"/>

                        <ImageView
                            android:id="@+id/left"
                            android:layout_width="97dp"
                            android:layout_height="97dp"
                            android:background="@drawable/codinggame_left"
                            android:contentDescription="left"
                            android:layout_margin="1dp"/>

                        <ImageView
                            android:id="@+id/right"
                            android:layout_width="97dp"
                            android:layout_height="97dp"
                            android:background="@drawable/codinggame_right"
                            android:contentDescription="right"
                            android:layout_margin="1dp"/>
                    </GridLayout>

                    <LinearLayout
                        android:id="@+id/transition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        android:layout_weight="1">

                        <ImageView
                            android:id="@+id/repeat"
                            android:layout_width="97dp"
                            android:layout_height="97dp"
                            android:background="@drawable/repeat"
                            android:contentDescription="repeat"
                            android:layout_margin="1dp"
                            android:clickable="true" />

                        <EditText
                            android:id="@+id/repeatnum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textAlignment="center"
                            android:visibility="gone"
                            android:inputType="number"
                            android:textSize="50dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="#c1cdcd"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/back"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="#424242"
                            android:text="Undo"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="32dp"/>

                        <Button
                            android:id="@+id/clear"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="#424242"
                            android:text="Clear"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="32dp"/>

                        <Button
                            android:id="@+id/run"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="#424242"
                            android:text="Run"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="32dp"/>

                        <Button
                            android:id="@+id/free"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_weight="1"
                            android:background="#FF8000"
                            android:text="free"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            android:textSize="32dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="7"
                    android:gravity="center"
                    android:background="#424242">

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn words :"
                        android:textColor="#ffffff"
                        android:textSize="38dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"/>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="English Voca"
                        android:textColor="#f76363"
                        android:textSize="38dp"
                        android:textStyle="bold"
                        android:gravity="center_horizontal"
                        android:layout_toRightOf="@+id/text2"
                        android:layout_marginLeft="5dp"/>

                </RelativeLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FFFFFF">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="70dp"
                        android:paddingRight="70dp"
                        android:background="#FFFFFF">

                        <TableLayout
                            android:id="@+id/tableLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="#c1cdcd">
                        </TableLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/dingcocontainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/dingco"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
    <!-- status bar : display connection info -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        style="@style/AppTheme.ConnectionInfoContainer" >
        <ImageView
            android:id="@+id/status_title"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="5dp"
            />
        <TextView 
            android:id="@+id/status_text"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:textSize="30dp"
            style="@style/AppTheme.ConnectionInfoText" />
    </LinearLayout>
    
</FrameLayout>