<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.wjthinkbig.a10010952.btproject.MainActivity$DummySectionFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:background="#424242">

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음을 코딩해보세요 :"
            android:textColor="#ffffff"
            android:textSize="38dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Coding Question"
            android:textColor="#f76363"
            android:textSize="38dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_toRightOf="@+id/text2"
            android:layout_marginLeft="5dp"/>

        <ToggleButton
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textOn="자유 코딩하기"
            android:textOff="문제 풀러가기"
            android:layout_toRightOf="@+id/text" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#c1cdcd"
        android:gravity="center"
        android:padding="10dp">

        <GridView
            android:id="@+id/codingStation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:numColumns="12">

        </GridView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="#c1cdcd"
        android:orientation="vertical">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#c1cdcd"
            android:columnCount="10"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/forward"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/codinggame_up"
                android:contentDescription="위" />

            <ImageView
                android:id="@+id/backward"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/codinggame_down"
                android:contentDescription="아래" />

            <ImageView
                android:id="@+id/turn_left"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/codinggame_left"
                android:contentDescription="왼쪽" />

            <ImageView
                android:id="@+id/turn_right"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/codinggame_right"
                android:contentDescription="오른쪽" />

            <ImageView
                android:id="@+id/red_led"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/red_led"
                android:contentDescription="빨강" />

            <ImageView
                android:id="@+id/yellow_led"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/yellow_led"
                android:contentDescription="노랑" />

            <ImageView
                android:id="@+id/blue_led"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/h"
                android:contentDescription="파랑" />

            <ImageView
                android:id="@+id/green_led"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/green_led"
                android:contentDescription="초록" />

            <ImageView
                android:id="@+id/turn_off"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/stop"
                android:contentDescription="끄기" />

            <ImageView
                android:id="@+id/horn"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:background="@drawable/horn"
                android:contentDescription="경적" />

        </GridLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            android:background="#c1cdcd"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#424242"
                android:text="되돌리기"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="32dp"/>

            <Button
                android:id="@+id/clear"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#424242"
                android:text="처음으로"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="32dp"/>

            <Button
                android:id="@+id/run"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:background="#424242"
                android:text="실행하기"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:textSize="32dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>