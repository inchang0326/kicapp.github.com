<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="150dp">

            <ImageButton
                android:id="@+id/basicV"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:scaleType="centerInside"
                android:src="@drawable/basicv"
                android:background="@drawable/edgecircle"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/basicS"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:enabled="false"
                android:scaleType="centerInside"
                android:src="@drawable/basicsno"
                android:background="@drawable/edgecircle"
                android:layout_margin="10dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="150dp">

            <ImageButton
                android:id="@+id/advancedV"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:enabled="false"
                android:scaleType="centerInside"
                android:src="@drawable/advancedvno"
                android:background="@drawable/edgecircle"
                android:layout_margin="10dp"/>

            <ImageButton
                android:id="@+id/advancedS"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:enabled="false"
                android:scaleType="centerInside"
                android:src="@drawable/advancedsno"
                android:background="@drawable/edgecircle"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>